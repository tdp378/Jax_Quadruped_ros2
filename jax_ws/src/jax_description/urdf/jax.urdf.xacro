<?xml version="1.0"?> 
<robot name="jax" 
xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- World link -->
  <link name="world"/>

  <!-- Fixed joint to base -->
  <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>



  <!-- Materials -->
<material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/> 
  </material>

<!-- Base link -->
<link name="base_link">
    <visual>
      <geometry> 
          <box size="0.25 0.15 0.05"/>
      </geometry>
      <material name="black"/>
    </visual>

<collision>
  <geometry>
    <box size="0.25 0.15 0.05"/>
  </geometry> 
</collision>

    <inertial> 
      <mass value="3.0"/>
      <origin xyz="0 0 0"/>
      <inertia
        ixx="0.02" ixy="0.0" ixz="0.0" 
        iyy="0.04" iyz="0.0"
        izz="0.05"/>
    </inertial> 
</link>

  <!-- FRONT LEFT LEG -->

  <link name="front_left_hip">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.02"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="front_left_hip_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_hip"/>
    <origin xyz="0.12 0.08 0.0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="front_left_thigh">
    <visual>
      <geometry>
        <cylinder length="0.12" radius="0.015"/>
      </geometry>
    </visual>
  </link>

  <joint name="front_left_thigh_joint" type="revolute">
    <parent link="front_left_hip"/>
    <child link="front_left_thigh"/>
    <origin xyz="0 0 -0.06"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="front_left_calf">
    <visual>
      <origin xyz="0 0 -0.06"/>
      <geometry>
        <cylinder length="0.12" radius="0.012"/>
      </geometry>
    </visual>
  </link>

  <joint name="front_left_knee_joint" type="revolute">
    <parent link="front_left_thigh"/>
    <child link="front_left_calf"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <!-- FRONT RIGHT LEG -->

  <link name="front_right_hip">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.02"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

<joint name="front_right_hip_joint" type="revolute">
  <parent link="base_link"/>
  <child link="front_right_hip"/>
  <origin xyz="0.12 -0.08 0.0"/>
  <axis xyz="1 0 0"/>
  <limit lower="-0.6" upper="0.6" effort="1.0" velocity="1.0"/>
</joint>



  <link name="front_right_thigh">
    <visual>
      <geometry>
        <cylinder length="0.12" radius="0.015"/>
      </geometry>
    </visual>
  </link>

  <joint name="front_right_thigh_joint" type="revolute">
    <parent link="front_right_hip"/>
    <child link="front_right_thigh"/>
    <origin xyz="0 0 -0.06"/>
    <axis xyz="0 -1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="front_right_calf">
    <visual>
      <origin xyz="0 0 -0.06"/>
      <geometry>
        <cylinder length="0.12" radius="0.012"/>
      </geometry>
    </visual>
  </link>

  <joint name="front_right_knee_joint" type="revolute">
    <parent link="front_right_thigh"/>
    <child link="front_right_calf"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 -1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>



</robot>
